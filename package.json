{
  "name": "react-render-actions",
  "version": "1.0.0-alpha.2",
  "description": "Set of JavaScript actions to use during component rendering",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-render-actions.cjs.js",
  "module": "lib/react-render-actions.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-render-actions.git"
  },
  "keywords": [
    "React",
    "rendering",
    "loop",
    "async-await",
    "if-else",
    "switch-case",
    "promise"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-render-actions/issues"
  },
  "homepage": "https://github.com/JB1905/react-render-actions#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-knobs": "^5.3.18",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@storybook/storybook-deployer": "^2.8.5",
    "@testing-library/react": "^10.0.4",
    "@types/jest": "^25.2.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.34",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^4.2.5",
    "jest": "^25.5.3",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
